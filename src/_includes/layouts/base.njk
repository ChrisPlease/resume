{% set toolbar %}
  {% include "partials/toolbar.njk" %}
{% endset %}

<!doctype html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="It's my personal website. Here you'll find my resume and contact information." />
    {% set css %}
      {%- include 'styles/variables.css' -%}
      {%- include 'styles/main.css' -%}
    {% endset %}
    <style>
      {{ css | cssmin | safe }}
    </style>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="icon" type="image/png" href="/favicon.png">
    <link rel="stylesheet" type="text/css" href="/assets/styles/main.css" />
    <title>{{ title }}</title>
    <script type="module" src="/assets/scripts/main.ts"></script>
    {% block scripts %}{% endblock %}
  </head>
  <body>
    {{ toolbar | safe }}
    <main id="app">
      {% block content %}
        {{ content | safe }}
      {% endblock %}
    </main>
  </body>
</html>
