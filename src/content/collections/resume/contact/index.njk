<dl class="contact-info">
  {% for item in details %}
    <dt class="contact-info__term">
      <i
        class="fa-{{ 'brands' if item.isBrand else 'light' }} fa-fw fa-lg fa-{{item.icon}}"
      ></i>
      <span class="sr-only">{{ item.key }}</span>
    </dt>
    <dd class="contact-info__detail">
      {% if item.tag === 'a' %}
        {% if item.to %}
          <a href="{{ item.to }}">{{ item.value }}</a>
        {% else %}
          {{ item.value | urlize | safe }}
        {% endif %}
      {% endif %}
      {% if item.tag === 'address' %}
        <address>{{ item.value }}</address>
      {% endif %}
    </dd>
  {% endfor %}
</dl>
